        function openEnquiry(productName) {
            const modal = document.getElementById('enquiryModal');
            document.getElementById('modalProductName').textContent = productName;
            document.getElementById('modalProductIcon').textContent = productIcons[productName] || 'üì¶';
            modal.classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        function closeEnquiry() {
            const modal = document.getElementById('enquiryModal');
            modal.classList.remove('show');
            document.body.style.overflow = '';
        }

        // Close modal on overlay click
        document.getElementById('enquiryModal').addEventListener('click', (e) => {
            if (e.target.id === 'enquiryModal') {
                closeEnquiry();
            }
        });

        // Enquiry form submission
        document.getElementById('enquiryForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            const name = document.getElementById('enquiryName').value;
            const email = document.getElementById('enquiryEmail').value;
            const message = document.getElementById('enquiryMessage').value;
            const product = document.getElementById('modalProductName').textContent;
            
            const mailtoLink = `mailto:trevorbosch4@gmail.com?subject=DHIVE Enquiry: ${product}&body=Name: ${name}%0AEmail: ${email}%0AProduct: ${product}%0A%0AMessage: ${message || 'No message provided'}`;
            
            window.location.href = mailtoLink;
            
            // Reset and close
            document.getElementById('enquiryForm').reset();
            closeEnquiry();
        });

        // Waitlist form handling
        const forms = document.querySelectorAll('.waitlist-form');
        const successMessage = document.getElementById('successMessage');
        const mainForm = document.getElementById('waitlistForm');

        forms.forEach(form => {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const emailInput = form.querySelector('input[type="email"]');
                const email = emailInput.value;
                const button = form.querySelector('button');
                
                // Disable button and show loading
                button.disabled = true;
                button.textContent = 'Joining...';

                // Simulate API call (replace with actual endpoint)
                // For now, we'll use mailto as fallback
                try {
                    // Option 1: If you set up a backend/Formspree/etc
                    // const response = await fetch('YOUR_ENDPOINT', {
                    //     method: 'POST',
                    //     headers: { 'Content-Type': 'application/json' },
                    //     body: JSON.stringify({ email })
                    // });

                    // Option 2: Store in localStorage for now + trigger mailto
                    const waitlist = JSON.parse(localStorage.getItem('dhive_waitlist') || '[]');
                    if (!waitlist.includes(email)) {
                        waitlist.push(email);
                        localStorage.setItem('dhive_waitlist', JSON.stringify(waitlist));
                    }

                    // Send notification email
                    const mailtoLink = `mailto:trevorbosch4@gmail.com?subject=DHIVE Waitlist Signup&body=New signup: ${email}`;
                    
                    // Create invisible iframe to trigger mailto without navigation
                    const iframe = document.createElement('iframe');
                    iframe.style.display = 'none';
                    iframe.src = mailtoLink;
                    document.body.appendChild(iframe);
                    setTimeout(() => iframe.remove(), 1000);

                    // Show success
                    if (form === mainForm) {
                        mainForm.style.display = 'none';
                        document.querySelector('.form-note').style.display = 'none';
                        successMessage.classList.add('show');
                    } else {
                        button.textContent = '‚úì You\'re in!';
                        button.style.background = 'linear-gradient(135deg, #22c55e 0%, #16a34a 100%)';
                        emailInput.value = '';
                    }

                } catch (error) {
                    button.textContent = 'Try Again';
                    button.disabled = false;
                }
            });
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>
